{
    "project_name": "Gen-Image-Classifier",
    "run_name": "mfm_clip_finetune",
    "output_dir": "outputs/mfm_clip",
    "data_root": "./data",
    "mfm_pretrained_path": "./pretrained/mfm_pretrain_resnet50.pth",
    "device": "cuda",
    "num_classes": 10,
    "batch_size": 32,
    "num_workers": 4,
    "num_epochs": 50,
    "label_smoothing": 0.0,

    "model": {
        "type": "mfm_clip",
        "vision_model_name": "openai/clip-vit-base-patch32",
        "hidden_dim": 512,
        "train_mfm_encoder": true,
        "train_vision_encoder": false
    },
    
    "normalization": {
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225]
    },

    "optimizer": {
        "name": "AdamW",
        "params": {
            "lr": 1e-4,
            "weight_decay": 0.01
        }
    },
    "scheduler": {
        "name": "CosineAnnealingLR",
        "params": {
            "T_max": 10
        }
    }
}