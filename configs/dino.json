{
    "project_name": "Gen-Image-Classifier",
    "run_name": "dino_finetune",
    "use_wandb": true,
    "output_dir": "outputs/dino",
    "data_root": "./data",
    "device": "cuda",
    "num_classes": 10,
    "batch_size": 32,
    "num_workers": 4,
    "num_epochs": 20,
    "label_smoothing": 0.0,

    "model": {
        "type": "dino",
        "vision_model_name": "facebook/dinov2-base",
        "hidden_dim": 512,
        "train_vision_encoder": false
    },
    
    "normalization": {
        "mean": [0.485, 0.456, 0.406],
        "std": [0.229, 0.224, 0.225]
    },

    "optimizer": {
        "name": "AdamW",
        "params": {
            "lr": 1e-4,
            "weight_decay": 0.01
        }
    },
    "scheduler": {
        "name": "CosineAnnealingLR",
        "params": {
            "T_max": 50
        }
    }
}
